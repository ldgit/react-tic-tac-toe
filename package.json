{
  "name": "tic-tac-toe-react",
  "version": "1.0.0",
  "description": "React intro tutorial (https://reactjs.org/tutorial/tutorial.html)",
  "main": "index.js",
  "homepage": "https://ldgit.github.io/react-tic-tac-toe/",
  "scripts": {
    "test:file": "mocha --require @babel/register",
    "test": "npm run test:file 'test/**/*.test.{js,jsx}'",
    "test:watch": "argus",
    "coverage": "nyc --all --require @babel/register mocha 'test/**/*.test.{js,jsx}' && nyc report --reporter=text-lcov | coveralls",
    "build": "webpack --mode=development",
    "build:prod": "webpack --mode=production",
    "start": "webpack-dev-server --open --mode=development",
    "lint": "eslint --ext .jsx,.js ./",
    "test:all": "npm run lint &&  npm t",
    "deploy": "npm run test:all && npm run build:prod && rm -rf docs/* && cp -R dist/. docs/"
  },
  "author": "Danko Lučić",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ldgit/react-tic-tac-toe.git"
  },
  "dependencies": {
    "node-sass": "^4.10.0",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "sass-loader": "^7.1.0"
  },
  "nyc": {
    "extension": [
      ".jsx"
    ],
    "exclude": [
      "coverage/**",
      "test/**",
      "**/node_modules/**",
      "dist/**",
      "docs/**",
      "*.config.js"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@babel/preset-env": "^7.1.6",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "argus-test-runner": "^2.0.0",
    "babel-loader": "^8.0.4",
    "chai": "^4.2.0",
    "clean-webpack-plugin": "^1.0.0",
    "coveralls": "^3.0.2",
    "css-loader": "^1.0.1",
    "eslint": "^5.9.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "file-loader": "^2.0.0",
    "html-webpack-plugin": "^3.2.0",
    "jsdom": "^13.0.0",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
  },
  "browserslist": [
    "ie > 8"
  ]
}
