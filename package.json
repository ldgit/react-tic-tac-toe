{
  "name": "tic-tac-toe-react",
  "version": "1.0.0",
  "description": "React intro tutorial (https://reactjs.org/tutorial/tutorial.html)",
  "main": "index.js",
  "homepage": "https://ldgit.github.io/react-tic-tac-toe/",
  "scripts": {
    "test:file": "mocha --require @babel/register",
    "test": "npm run test:file \"test/**/*.test.{js,jsx}\"",
    "test:watch": "argus",
    "coverage": "nyc --all --require @babel/register mocha 'test/**/*.test.{js,jsx}' && nyc report --reporter=text-lcov | coveralls",
    "build": "webpack --mode=development",
    "build:prod": "webpack --mode=production",
    "start": "webpack-dev-server --open --mode=development",
    "lint": "eslint --ext .jsx,.js ./",
    "test:all": "npm run lint &&  npm t",
    "deploy": "npm run test:all && npm run build:prod && rm -rf docs/* && cp -R dist/. docs/"
  },
  "author": "Danko Lučić",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ldgit/react-tic-tac-toe.git"
  },
  "dependencies": {
    "core-js": "^2.6.5",
    "node-sass": "^4.11.0",
    "raf": "^3.4.1",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "sass-loader": "^7.1.0"
  },
  "nyc": {
    "extension": [
      ".jsx"
    ],
    "exclude": [
      "coverage/**",
      "test/**",
      "**/node_modules/**",
      "dist/**",
      "docs/**",
      "*.config.js",
      "src/polyfill/**"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "argus-test-runner": "^2.0.1",
    "babel-loader": "^8.0.5",
    "chai": "^4.2.0",
    "clean-webpack-plugin": "^1.0.1",
    "coveralls": "^3.0.3",
    "css-loader": "^2.1.0",
    "eslint": "^5.15.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-react-hooks": "^1.4.0",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "jsdom": "^13.2.0",
    "mocha": "^6.0.2",
    "nyc": "^13.3.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.2.1"
  },
  "browserslist": [
    "ie > 8"
  ]
}
